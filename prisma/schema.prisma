generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id         String        @id @default(uuid())
  userName   String
  email      String
  Avatar     String
  BucketItem BucketItems[]
  level      Int          @default(0)
}

model BucketItems {
  id              String       @id @default(uuid())
  User            User?        @relation(fields: [userId], references: [id])
  Active          Boolean
  userId          String
  ItemName        String
  duedate         DateTime?
  Achieved        Boolean
  PhotoOfTarget   String?
  type            typeOfTarget
  onHold          Boolean
  budget          Float
  remainingAmount Float
  failed          Boolean
}

enum typeOfTarget {
  dreamMilestone
  ShortMilestone
}
